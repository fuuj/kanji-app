<h2>マイページ</h2>
<% if @error %>
    <% @error.each do |s| %>
        <p class="error"><%= s %></p>
    <% end %>
<% end %>
<p>ようこそ, <%= current_user.name %> さん.</p>
<p id="message"><%= @message %></p>
<form action="/user/kanji_register" method="POST" class="container">
    <input name="kanji" placeholder="ドリルに追加したい漢字を入れてください">
    <input type="submit" value="登録">
</form>
<a class="button small-button" href="/user/mytest">テストを受ける</a>
<a class="button small-button" href="/user/mydrill">ドリルを見る</a>
<br>
<br>
<a class="button small-button" href="/logout" onclick="alert('ログアウトしました')">ログアウト</a>
